extends layout

block content
  div.page-header
    h1 Test Game

  div.row
    div.btn-group
      a(href="#"): button.btn.btn-default
        span.glyphicon.glyicon-plus
        | Create Game
  div.row
    form.form-horizontal(method="POST")
      div.form-group
        label.control-label.col-sm-2
          span
          | Item:
        div.col-sm-10
          select(name="item")
            for item in items
              option(value=item.id) #{ item.title }
      div.form-group
        label.control-label.col-sm-2
          span
          | Number of Player:
        div.col-sm-10
          input(name="capacity", type="number", class='form-control')
      div.form-group
        label.control-label.col-sm-2
          span
          | Count Time (Seconds):
        div.col-sm-10
          input(name="countdown", type="number", class='form-control')
