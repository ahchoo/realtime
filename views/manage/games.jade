extends layout

block content
  div.page-header
    h1 Games
  div.row
    div.btn-group
      button.btn.btn-default
        a(href="/manage/games/new")
          span.glyphicon.glyphicon-plus
          | Add
  div.row
    table.table
      thead
        th 
        th Item
        th Capacity
        th Countdown
        th Status
      tbody
        each game in games
          tr
            td: a(href="/manage/games/#{game._id}") Edit
            td #{game.item.title}
            td #{game.capacity}
            td #{game.countdown}
            td #{game.status || ''}
