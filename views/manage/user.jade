extends layout

block content
  div.page-header
    h1 #{title}
  div.row
    form.form-horizontal(method="POST")
      div.form-group
        label.control-label.col-sm-2 Email
        div.col-sm-10
          input(name="email", type="email", class="form-control", placeholder="Email", value="#{user.email}")
      div.form-group
        label.control-label.col-sm-2 Name
        div.col-sm-10
          input(name="name", type="text", class="form-control", placeholder="Name", value="#{user.name}")
      div.form-group
        label.control-label.col-sm-2 Password
        div.col-sm-10
          input(name="password", type="password", class="form-control", placeholder="Password")
      div.form-group
        label.control-label.col-sm-2 Confirm Password
        div.col-sm-10
          input(name="password2", type="password", class="form-control", placeholder="Password Again")
      div.form-group
        div.col-sm-offset-2.col-sm-10
          div.btn-group
            button.btn.btn-default(type="submit") OK
            button.btn.btn-default: a(href="/manage/users") Cancel
      input(name="_id", type="hidden", value="#{user._id || ''}")
